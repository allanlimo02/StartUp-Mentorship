{{#partial "content"}}
    <div class="container p-5 m-5">
        <div class="row m-5">
            <div class="col-md-6 text-center">
                <br><br><br>
                <br><br><br>
                <h1 style="color:rgb(42,74,74);">SME-INCUBATOR</h1>
                <br><br>
                <img src="images/justicon.jpeg" style="width:400px;height:550; border-radius:500px 500px 500px 500px;"/>
            </div>
            <div class="col-md-6">

                <form action="" method="post" id="loginform">
                    <h1 class="text-center">CREATE ACCOUNT</h1>
                    <br>
                    <div class="mb-3">
                        <div class="row">
                            <div class="col-md-6">
                                <input type="text" name="firstname" class="form-control" id="firstname" required placeholder="First name">
                            </div>
                            <div class="col-md-6">
                                <input type="text" name="surname" class="form-control" id="surname" required placeholder="Surname">
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email address</label>
                        <input type="email" name="email" class="form-control" id="email1" aria-describedby="emailHelp" required placeholder="Enter email">
                        <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                    </div>
                    <div class="mb-3">
                        <label for="InputPassword" class="form-label">Password</label>
                        <input type="password" name="InputPassword" class="form-control" id="exampleInputPassword1" required placeholder="Enter password">
                    </div>
                    <div class="mb-3">
                        <label for="InputPassword" class="form-label">Repeat Password</label>
                        <input type="password" name="InputPassword" class="form-control" id="exampleInputPassword1" required placeholder="Repeat password">
                    </div>

                    <div class="mb-3">
                        <label for="InputPassword" class="form-label">Gender:</label>
                        <br>
                        <div class="form-check form-check-inline ms-5 ps-5">
                            <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="male">
                            <label class="form-check-label" for="inlineCheckbox1">Male</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="inlineCheckbox2" value="female">
                            <label class="form-check-label" for="inlineCheckbox2">Female</label>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="birthday">Date of Birth</label><br>
                        <input type="date" id="birthday" name="birthday">
                    </div>

                    <div class="mb-3 form-check">
                        <input type="checkbox" name="checkbox" class="form-check-input" id="exampleCheck1">
                        <label class="form-check-label" for="checkbox">
                            <p>By creating an account you agree to our <a href="#">Terms & Privacy</a>.</p>
                        </label>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-lg btn-primary  text-center" style="background-color:rgb(42,74,74) !important;">Submit</button>
                    </div>

                </form>
            </div>
        </div>


    </div>
{{/partial}}
{{> layout.hbs}}